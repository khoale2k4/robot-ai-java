<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_color">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Robot BLE Connection"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/primary_text"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Status -->
    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Checking Bluetooth status..."
        android:textSize="16sp"
        android:textColor="@color/secondary_text"
        android:gravity="center"
        android:layout_marginBottom="12dp" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        android:visibility="gone" />

    <!-- Control Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/enableBluetoothButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable Bluetooth"
            android:textColor="@android:color/white"
            android:background="@drawable/button_primary"
            android:layout_marginEnd="8dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/scanButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan Devices"
            android:textColor="@android:color/white"
            android:background="@drawable/button_primary"
            android:layout_marginStart="8dp" />

        <Button
            android:id="@+id/disconnectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disconnect"
            android:textColor="@android:color/white"
            android:background="@drawable/button_primary"
            android:layout_marginStart="8dp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Device List Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Available BLE Devices"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/primary_text"
        android:layout_marginBottom="8dp" />

    <!-- Device List -->
    <ListView
        android:id="@+id/deviceListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:background="@drawable/list_background"
        android:divider="@color/divider_color"
        android:dividerHeight="1dp"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Message Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Message"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/primary_text"
        android:layout_marginBottom="8dp" />

    <!-- Message Input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/messageEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter message to send..."
            android:inputType="text"
            android:background="@drawable/list_background"
            android:padding="12dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:textColor="@android:color/white"
            android:background="@drawable/button_primary"
            android:enabled="false" />

    </LinearLayout>

    <!-- Received Data Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Received Data"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/primary_text"
        android:layout_marginBottom="8dp" />

    <!-- Received Data Display -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:background="@drawable/list_background"
        android:padding="8dp">

        <TextView
            android:id="@+id/receivedDataTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Received data will appear here...\n"
            android:textSize="14sp"
            android:textColor="@color/secondary_text"
            android:fontFamily="monospace"
            android:scrollbars="vertical" />

    </ScrollView>

    <!-- Instructions -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tap on a device to connect â€¢ Send messages after connecting"
        android:textSize="12sp"
        android:textColor="@color/secondary_text"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-light" />

</LinearLayout> 