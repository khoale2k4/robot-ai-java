    <style name="CancelButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/cancel_orange</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">10dp</item>
    </style>
    <style name="ControlButton">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@color/primary_blue</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cornerRadius">12dp</item>
    </style>
    <style name="ControlButtonLarge">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@color/primary_blue</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cornerRadius">12dp</item>
    </style>
    <style name="DisconnectButton" parent="ControlButtonLarge">
        <item name="android:backgroundTint">@android:color/darker_gray</item>
    </style>
    <style name="StopButton" parent="ControlButtonLarge">
        <item name="android:backgroundTint">@android:color/holo_red_dark</item>
    </style>
    <style name="Theme.My_first_app" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        
